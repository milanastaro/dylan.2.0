# --------------------------- Outfit Generator ---------------------------
elif page == "Outfit Generator":
    st.subheader("ğŸ¤– AI Outfit Generator")
    temp = st.slider("ğŸŒ¡ï¸ Temperature", 30, 100, 70)
    occasion = st.selectbox("ğŸ¯ Occasion", ["Casual", "Work", "Party", "Date", "Formal"])
    color_theme = random.choice(["Pastel", "Earthy", "Monochrome", "Bright"])
    st.markdown(f"**Suggested Theme:** `{color_theme}`")
